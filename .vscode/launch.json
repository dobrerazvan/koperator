    "version": "0.2.0",
    "configurations": [
    {
        "name": "Run main",
        "type": "go",
        "request": "launch",
        "mode": "debug",
        "program": "${file}",
        "args": ["--enable-leader-election",
            "--cert-manager-namespace=cert-manager",
            "--cert-manager-enabled=false",
            "--disable-cert-signing-support",
            "--disable-webhooks",
            "--namespaces=default"]
    }
    ]
